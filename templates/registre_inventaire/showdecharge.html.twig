{% extends "template.html.twig" %}

{% block title %}{{'reg_inventaire'|trans}}{% endblock %}

{% block body %}
 <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">{{'reg_inventaire'|trans}}</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-box-seam"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> {{'details_decharge'|trans}}  </li>
              </ol>
            </nav>
          </div>
        
        </div>
        <hr/>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive" >
              

					<table class="table table-striped table-bordered"  >
							
								<tbody>
					
										<tr>
											<td> {{'n_decharge'|trans}}</td> <td>{{decharge.numdecharge}}</td>
										</tr>
										<tr>
											<td> {{'exercice'|trans}}</td> <td>{{decharge.exercice}}</td>
										</tr>
										<tr>
											<td>{{'date_decharge'|trans}}</td> <td> {% if decharge.datedecharge  %} {{decharge.datedecharge|date('Y-m-d')}}  {% else %} {% endif %} </td>
										</tr>
										<tr>
											<td>{{'personnel'|trans}}</td> <td>{{decharge.personnel.nom}} {{decharge.personnel.prenom}}</td>
										</tr>
							          	<tr>
											<td>{{'locale'|trans}}</td> <td>{{decharge.locale}} {{decharge.locale}}</td>
										</tr>
		
								</tbody>
							
							</table>


							{% if decharge.inventaire is not empty %}
				<div class="card">
					<div class="card-body">
						<div class="card-header py-2 bg-transparent">
                  <h6 class="mb-0">{{'liste_article_decharge'|trans}}</h6> 
                </div>
						<div class="table-responsive">
							<table id="example" class="table table-striped table-bordered" style="text-align:center !important ;" >
								<thead>
									<tr>
										<th style="text-align:center !important ;">{{'n_inventaire'|trans}} </th>
										<th style="text-align:center !important ;">{{'designation'|trans}}</th>
										<th style="text-align:center !important ;">{{'remarque'|trans}}</th>
									</tr>
								</thead>
								<tbody>
								    {% for inventaire in decharge.inventaire %}
                                        <tr>
                                            <td>{{inventaire.numinventaire}}</td>
                                            <td>{{inventaire.article.designation}}</td>
											<td>{{inventaire.remarque}}</td>
                                        </tr>
                                    {% endfor %}
								</tbody>
							
							</table>
						</div>
					</div>
				</div>
                {% else %}
                    <div class="alert alert-success">
                        <strong>{{'no_inventaire'|trans}} </strong>  
                    </div>
                {% endif %}


            </div>

	<div>
        	<a class="btn btn btn-primary px-4" style="float:left" href="{{ path('registreinventaires') }}"> {{'back'|trans}} </a> 
            <a class="btn btn btn-success px-4 col-2" style="float:right" href="{{ path('etatDecharge', { 'id': decharge.id}) }}"> {{'imprimer_decharge'|trans}} </a>                    
        </div>
          </div>
        </div>
	
							                    

{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}

              						