    (function($) {


      $(".js-dateDebut").datepicker({
        minDate: 0,
        maxDate: "+50Y",
        numberOfMonths: 1,
        language:'fr',
        dateFormat : 'yy-mm-dd',
        prevText : '<i class="fa fa-chevron-left"></i>',
        nextText : '<i class="fa fa-chevron-right"></i>',
    });

    })(jQuery);
</script>


{% endblock %}