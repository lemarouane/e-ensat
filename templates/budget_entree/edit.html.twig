	              				
{% extends 'template.html.twig' %}

{% block title %}{{'budget_entree'|trans}}{% endblock %}
{% block stylesheets %}
        {{ parent() }}
        
{% endblock %}
{% block body %}
     
<div class="row">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3"> {{'budget_entree'|trans}}</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-box-seam"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page"> {{'edit_budget_entree'|trans}}</li>
                </ol>
            </nav>
        </div>
         
    </div>

    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-body">
                {% include "flaches.html.twig" %}
	            {{ form_start(form) }}
                    <div class="card shadow-none bg-light border">
                        <div class="card-body" >
                            <div class="row g-3">
                                <div class="col-6">
                                    {{ form_row(form.budget) }}
                                </div>
                                <div class="col-6">
                                    {{ form_row(form.rubrique_recette) }}
                                </div>

                                <div class="col-6">
                                    {{ form_row(form.libelle) }}
                                </div>

                                <div class="col-6">
                                    {{ form_row(form.annee) }}
                                </div>
								<div class="col-6">
                                    {{ form_row(form.montant) }}
                                </div>
		                        <div class="form-group button">
                                    <div class="col-sm-offset-2 col-sm-10 ">
                                        <a href="{{url('app_budget_entree_index')}}" class="btn btn btn-primary px-4 col-2" style="float:left">{{'back'|trans}}</a>
                                        <button type='submit' class="btn btn btn-success px-4 col-4" style="float:right"> {{'save'|trans}} </button>
                                    </div>
		                        </div>
                            </div>
                        </div> 
                    </div>
                {{ form_end(form) }}  
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{parent()}}  
{% endblock %} 