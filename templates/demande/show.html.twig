{% extends "template.html.twig" %}

{% block title %}{{'dms'|trans}}{% endblock %}

{% block body %}
 <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">{{'dms'|trans}}</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-box-seam"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> {{'details'|trans}}  </li>
              </ol>
            </nav>
          </div>
        
        </div>
        <hr/>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              

					<table class="table table-striped table-bordered"  >
							
								<tbody>
					
										<tr>
											<td> {{'n_demande'|trans}}</td> <td>{{demande.numdemande}}</td>
										</tr>
										<tr>
											<td> {{'demandeur'|trans}}</td> <td>{{demande.personnel.nom}} {{demande.personnel.prenom}}</td>
										</tr>

										
		
								</tbody>
							
							</table>

							{% if demande.demandelignes is not empty %}
				<div class="card">
					<div class="card-body">
						<div class="table-responsive">
							<table id="example" class="table table-striped table-bordered" style="text-align:center !important ;" >
								<thead>
									<tr>
										<th style="text-align:center !important ;"> {{'code_article'|trans}}</th>
										<th style="text-align:center !important ;"> {{'designation'|trans}}</th>
                    <th style="text-align:center !important ;"> {{'qte'|trans}}</th>
									</tr>
								</thead>
								<tbody>
								    {% for ligne in demande.demandelignes %}
                                        <tr>
                                            <td>{{ligne.article.code}}</td>
                                            <td>{{ligne.article.designation}}</td>
                                            <td>{{ligne.qte}}</td>	
                                        </tr>
                                    {% endfor %}
								</tbody>
							
							</table>
						</div>
					</div>
				</div>
                {% else %}
                    <div class="alert alert-success">
                        <strong> {{'no_article'|trans}} </strong>  
                    </div>
                {% endif %}

            </div>


          </div>
        </div>
		<div>
        	<a class="btn btn btn-primary px-4 col-2" style="float:left" href="{{ path('demandes') }}"> {{'back'|trans}} </a>                     
        </div>
							                    

{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}

              						