
{% extends 'template.html.twig' %}

{% block title %}{{'titles.histo'|trans}}{% endblock %}

{% block body %}


				<!--breadcrumb-->
				<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
					<div class="breadcrumb-title pe-3">{{'titles.histo'|trans}}</div>
					<div class="ps-3">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb mb-0 p-0">
								<li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-clock-history"></i></a>
								</li>
								<li class="breadcrumb-item active" aria-current="page">{{'titles.hist_act'|trans}}</li>
							</ol>
						</nav>
					</div>
				
				</div>
				<hr/>
				<div class="card">
					<div class="card-body">
						<div class="table-responsive">
							<table id="example" class="table table-striped table-bordered" style="text-align:center !important ; " >
								<thead>
									<tr>
					
										<th style="text-align:center !important ; ">{{'n'|trans}}</th>
										<th style="text-align:center !important ; ">{{'demandeur'|trans}}</th>	
										<th style="text-align:center !important ; ">{{'date_envoie'|trans}}</th>	
										<th style="text-align:center !important ; ">{{'date_validation'|trans}}</th>	
									    <th style="text-align:center !important ; ">{{'type_dem'|trans}}</th>	
										<th style="text-align:center !important ; ">{{'statut'|trans}}</th>	

									
									</tr>
								</thead>
								<tbody>
	{% for histo_val in histo_vals %}
<tr>
      <td>{{ histo_val.idDemande }}</td>
	        <td>{{ histo_val.demandeur.nom }} {{ histo_val.demandeur.prenom }}</td>
	 
 	  <td>{{ histo_val.dateEnvoie|date('Y-m-d - H:i') }}</td>
	    <td>{{ histo_val.dateValidation|date('Y-m-d - H:i') }}</td>
		  <td>

		    {% if histo_val.typeDemande == 'autorisation' %}
        {{'auto'|trans}}
	   	 {% endif %}
		  {% if histo_val.typeDemande == 'conge' %}
        {{'cong'|trans}}
	   	 {% endif %}
		  {% if histo_val.typeDemande == 'ordre de mission' %}
        {{'om'|trans}}
	   	 {% endif %}
		  {% if histo_val.typeDemande == 'attestation' %}
        {{'att'|trans}}
	   	 {% endif %}
		  {% if histo_val.typeDemande == 'fiche heure' %}
        {{'fh'|trans}}
	   	 {% endif %}

		  </td>
  {% if histo_val.statut  == '-1' %}
                                        <td style="color:black;font-weight:bold;">{{'encours'|trans}}</td>
                                         
                                           
                                        {% elseif histo_val.statut  == '0' %}
                                        <td style="color:blue;font-weight:bold;"> {{'confime'|trans}}</td>
                                         
                                           
                                        {% elseif histo_val.statut  == '1' %}
                                        <td style="color:green;font-weight:bold;"> {{'valide'|trans}}</td>
                                         
  
                                        {% elseif histo_val.statut  == '2' %}
                                        <td style="color:red;font-weight:bold;"> {{'refuse'|trans}}</td>
                                        {% else %}
                                        <td></td>
                                         {% endif %}   
			

</tr>
       
        {% endfor %}
								</tbody>
							
							</table>
						</div>


					</div>
				</div>

        {% endblock %}





