{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}


{% block body %}
 
 <!--start wrapper-->
  <div class="wrapper">
     
       <!--start content-->
       <main class="authentication-content">
        <div class="container-fluid">
          <div class="authentication-card">
            <div class="card shadow rounded-0 overflow-hidden">
              <div class="row g-0">
                <div class="col-lg-6 bg-login d-flex align-items-center justify-content-center">
                  <img src="{{asset('build/images/error/login-img.jpg')}}" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6">
                  <div class="card-body p-4 p-sm-5">
                
                    {{ form_start(registrationForm) }}
                      
                      <div class="login-separater text-center mb-4"> <span>SIGN UP WITH EMAIL</span>
                        <hr>
                      </div>
                        <div class="row g-3">
                          <div class="col-12 ">
                            <label for="inputName" class="form-label">Username</label>
                            <div class="ms-auto position-relative">
                              <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-circle"></i></div>
                              <input type="email" class="form-control radius-30 ps-5" id="inputName">
                            </div>
                          </div>
                          <div class="col-12">
                            {{ form_label(registrationForm.email) }}
                            <div class="ms-auto position-relative">
                              <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-envelope-fill"></i></div>
                              {{ form_widget(registrationForm.email,{'attr': {'class': 'form-control radius-30 ps-5'}}) }}
                            </div>
                          </div>
                          <div class="col-12">
                          {{ form_label(registrationForm.plainPassword.first) }}
                            <div class="ms-auto position-relative">
                              <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-lock-fill"></i></div>
                                {{ form_widget(registrationForm.plainPassword.first,{'attr': {'class': 'form-control radius-30 ps-5'}}) }}
                            </div>
                          </div>
                          <div class="col-12">
                          {{ form_label(registrationForm.plainPassword.second) }}
                            <div class="ms-auto position-relative">
                              <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-lock-fill"></i></div>
                                {{ form_widget(registrationForm.plainPassword.second,{'attr': {'class': 'form-control radius-30 ps-5'}}) }}
                            </div>
                          </div>
                          <div class="col-12">
                            <div class="form-check form-switch">
                                {{ form_row(registrationForm.agreeTerms ,{'attr': {'class': 'form-check-input'}}) }}
                             
                            </div>
                          </div>
                          <div class="col-12">
                            <div class="d-grid">
                              <button type="submit" class="btn btn-primary radius-30">Sign in</button>
                            </div>
                          </div>
                          <div class="col-12">
                            <p class="mb-0">Already have an account? <a href="{{path('app_login')}}">Login here</a></p>
                          </div>
                        </div>
                   {{ form_end(registrationForm) }}
                 </div>
                </div>
              </div>
            </div>
          </div>
        </div>
       </main>
        
       <!--end page main-->

  </div>
  <!--end wrapper  -->









    
        
      
      

        <button type="submit" class="btn">Register</button>
    
{% endblock %}

{% block javascripts %}
            {{ encore_entry_script_tags('app') }} 
    {% endblock %}