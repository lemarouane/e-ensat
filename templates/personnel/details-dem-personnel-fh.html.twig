
{% extends 'template.html.twig' %}

{% block title %}{{'titles.rh'|trans}}{% endblock %}

{% block body %}

        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">{{'titles.rh'|trans}}</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-hfhe-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> {{'stats_dem_personnel'|trans}} | <span style="font-weight:bold;"> {{'fhs'|trans}} -  {{nom_perso}} - {{annee}}</span> </li>
              </ol>
            </nav>
          </div>
        
        </div>
        <hr/>

        <div class="card">
          <div class="card-body">

{% for fh in fhs %}
 
<div class="table-responsive">          
<table class="table table-striped table-bordered" >
							
								<tbody> 
					
				  <tr style="background-color : lightblue; font-weight:bold;">
					<td class="col-4">{{'n'|trans}}</td> 
                    <td> {{fh.id}} </td>
				  </tr>


                    <tr>
                    <td>{{'date_envoie'|trans}}</td>
                    <td>
                      {% if fh.dateEnvoie is not empty %}
                    {{fh.dateEnvoie|date('Y-m-d H:i')}}
                    {% endif  %}
                    </td>
                    </tr>


            <tr>
				    <td>{{'etablissement'|trans}}</td> 
            <td>{{fh.etablissement}}</td>
			     	</tr>
          

 	         

            <tr>
				    <td>{{'ville'|trans}}</td> 
            <td>{{fh.ville}}</td>
			     	</tr>

             <tr>
				    <td>{{'nb_Heures'|trans}}</td> 
            <td>{{fh.nbHeure}}</td>
			     	</tr>




					<tr>
					<td>{{'date_debut'|trans}}</td>
                    <td>

                     {% if fh.moisDebut is not empty %}
                    {{fh.moisDebut|date('Y-m-d')}}
                    {% endif  %}

                    </td>
					</tr>
            
                    <tr>
                    <td>{{'date_fin'|trans}}</td>
                    <td>

                     {% if fh.moisFin is not empty %}
                    {{fh.moisFin|date('Y-m-d')}}
                    {% endif  %}

                    </td>
                    </tr>

                    <tr>
                    <td>{{'statut'|trans}}</td>
                    <td>
                    
                    

                         {% if fh.statut == '-1' %}
                           <span style="color:black;font-weight:bold;"> {{'encours'|trans}} </span>
                            {% elseif fh.statut == '1' %}
                           <span style="color:green;font-weight:bold;">   {{'valide'|trans}} </span>
                             {% elseif fh.statut == '0' %}
                           <span style="color:blue;font-weight:bold;">   {{'cfhfirme'|trans}} </span>
                            {% elseif fh.statut == '2' %}
                           <span style="color:red;font-weight:bold;">   {{'refuse'|trans}} </span>
                      {% endif %}
                  
                    
                    </td>
                    </tr>


																									
					</tbody>	
				</table>
            </div>
    {% endfor %}
        <a class="btn btn btn-primary px-4 col-2" href="{{ app.request.headers.get('referer') }}">  {{'back'|trans}} </a>
          </div>
        </div>


    


  
{% endblock %}



