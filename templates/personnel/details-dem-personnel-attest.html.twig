
{% extends 'template.html.twig' %}

{% block title %}{{'titles.rh'|trans}}{% endblock %}

{% block body %}

        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">{{'titles.rh'|trans}}</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> {{'stats_dem_personnel'|trans}} | <span style="font-weight:bold;"> {{'attestations'|trans}} -  {{nom_perso}} - {{annee}}</span> </li>
              </ol>
            </nav>
          </div>
        
        </div>
        <hr/>

        <div class="card">
          <div class="card-body">

{% for attest in attests %}
 
<div class="table-responsive">          
<table class="table table-striped table-bordered" >
							
								<tbody> 
					
				  <tr style="background-color : lightblue; font-weight:bold;">
					<td class="col-4" >{{'n'|trans}}</td> 
                    <td> {{attest.id}} </td>
				  </tr>


                    <tr>
                    <td>{{'date_envoie'|trans}}</td>
                    <td>
                      {% if attest.dateEnvoie is not empty %}
                    {{attest.dateEnvoie|date('Y-m-d H:i')}}
                    {% endif  %}
                    </td>
                    </tr>


 	               <tr>
				    <td>{{'type'|trans}}</td> 
                    <td>

                   {% if attest.type == "AS"%}
                   {{'att_salaire'|trans}}
                   {% endif %}

                    {% if attest.type == "AT"%}
                    {{'att_travail'|trans}}
                   {% endif %}
                 
                    </td>
			     	</tr>

  {% if attest.type == "AS"%}
					<tr>
					<td>{{'date_debut'|trans}}</td>
                    <td>

                     {% if attest.dateDebut is not empty %}
                    {{attest.dateDebut|date('Y-m-d')}}
                    {% endif  %}

                    </td>
					</tr>
            
                    <tr>
                    <td>{{'date_fin'|trans}}</td>
                    <td>

                     {% if attest.dateFin is not empty %}
                    {{attest.dateFin|date('Y-m-d')}}
                    {% endif  %}

                    </td>
                    </tr>
   {% endif %}
                    <tr>
                    <td>{{'statut'|trans}}</td>
                   


                          <td>
                          
                            {% if attest.statut == '-1' %}
                           <span style="color:black;font-weight:bold;"> {{'encours'|trans}} </span>
                            {% elseif attest.statut == '1' %}
                           <span style="color:green;font-weight:bold;">   {{'valide'|trans}} </span>
                             {% elseif attest.statut == '0' %}
                           <span style="color:blue;font-weight:bold;">   {{'comfirme'|trans}} </span>
                            {% elseif attest.statut == '2' %}
                           <span style="color:red;font-weight:bold;">   {{'refuse'|trans}} </span>
                            {% endif %}
                        
                          
                          </td>

                 
                    </tr>


																									
					</tbody>	
				</table>
            </div>
    {% endfor %}
     <a class="btn btn btn-primary px-4 col-2" href="{{ app.request.headers.get('referer') }}">  {{'back'|trans}} </a>
          </div>
          
        </div>


    


  
{% endblock %}



