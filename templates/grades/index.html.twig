{% extends 'base.html.twig' %}

{% block title %}Grades index{% endblock %}

{% block body %}
    <h1>Grades index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DesignationFR</th>
                <th>DesignationAR</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grade in grades %}
            <tr>
                <td>{{ grade.id }}</td>
                <td>{{ grade.designationFR }}</td>
                <td>{{ grade.designationAR }}</td>
                <td>
                    <a href="{{ path('app_grades_show', {'id': grade.id}) }}">show</a>
                    <a href="{{ path('app_grades_edit', {'id': grade.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_grades_new') }}">Create new</a>
{% endblock %}
