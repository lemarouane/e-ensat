
{% extends 'template.html.twig' %}

{% block title %}{{'dms'|trans}}{% endblock %}

{% block body %}

        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">{{'oms'|trans}}</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-search"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> {{'titles.details_dem_om'|trans}} {{'n'|trans}} {{ordreMission.id}}  </li>
              </ol>
            </nav>
          </div>
        
        </div>
        <hr/>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              

<table class="table table-striped table-bordered" >
							
								<tbody>
					
										<tr>
										<td>{{'n'|trans}}</td> <td>{{ordreMission.id}}</td>
										</tr>

										<tr>
										<td>{{'demandeur'|trans}}</td> <td>{{ordreMission.personnel.nom}} {{ordreMission.personnel.prenom}}</td>
										</tr>

										<tr>
										<td>{{'date_envoie'|trans}}</td> <td>{{ordreMission.dateEnvoie|date('Y-m-d')}}</td>
										</tr>
					
				                       	<tr>
										<td>{{'objet'|trans}}</td> <td>{{ordreMission.objetMission}}</td>
										</tr>

										<tr>
										<td> {{'destination'|trans}}</td> <td>{{ordreMission.destination}}</td>
										</tr>

										<tr>
										<td> {{'date_debut'|trans}}</td> <td>{{ordreMission.dateDebut|date('Y-m-d')}}</td>
										</tr>

										<tr>
										<td>{{'date_fin'|trans}}</td> <td>{{ordreMission.dateFin|date('Y-m-d')}}</td>
										</tr>

										<tr>
										<td>{{'cadre_mission'|trans}}</td> <td>{{ordreMission.cadreMission}}</td>
										</tr>

										<tr>
										<td>{{'str_acceuil'|trans}}</td> <td>{{ordreMission.structureAcceuil}}</td>
										</tr>

										<tr>
										<td> {{'moy_transp'|trans}}</td> <td>{{ordreMission.moyenTransport}}</td>
										</tr>
										
									{% if ordreMission.invitation is not empty %}
										<tr>
										<td>{{'invit'|trans}}</td> <td> <a href="{{ asset('webroot/docs/' ~ ordreMission.personnel.nom ~ '_' ~ ordreMission.personnel.prenom ~ '/Ordre_mission/' ~ ordreMission.invitation) }}"><i class="bi bi-file-earmark-fill"></i></a> </td>
										</tr>
									{% endif %}	

									{% if ordreMission.financementMission is not empty %}
  										<tr>
									<td>{{'financement'|trans}}</td>
									<td>
 										 {% for financement in ordreMission.financementMission %} {{financement }}<br> {% endfor %} 
									</td>
 									 </tr>

										

									{% endif %}	


									{% if ordreMission.valeurProjet is not empty %}
										<tr>
										<td> {{'val_projet'|trans}}</td> <td> {{ordreMission.valeurProjet}}</td>
										</tr>
									{% endif %}	

									{% if ordreMission.valeurAutre is not empty %}
										<tr>
										<td> {{'val_autre'|trans}}</td> <td> {{ordreMission.valeurAutre}}</td>
										</tr>
									{% endif %}	

										<td>{{'type'|trans}}</td>
											<td> 
													{% if ordreMission.typeMission == "E" %}
												{{'ens'|trans}}
													{% endif %}
													{% if ordreMission.typeMission == "R" %}
												{{'rech'|trans}}
													{% endif %}
													{% if ordreMission.typeMission == "D" %}
												{{'deplac'|trans}}
													{% endif %}

											{% if ordreMission.typeMission not in ["E","R","D"] %}
												{{ ordreMission.typeMission}} 
											{% endif %}
										    </td>
										</tr>


								{% if ordreMission.engagements is not empty %}
    									 {% for engagement in ordreMission.engagements %}	 
                                        <tr>
										<td>{{'engagement'|trans}} {{'n'|trans}} {{engagement.id }} </td> <td> {{'date_fait'|trans}} : {{engagement.dateFait|date('Y-m-d')  }} <br> {{'type'|trans}}  :  {{engagement.typeEngagement }} <br> {{'matiere'|trans}} {{engagement.matiere }}  </td>
										</tr>
    									 {% endfor %} 
								{% endif %}


										
								</tbody>
							
							</table>

            </div>


          </div>
        </div>

      




  
{% endblock %}



