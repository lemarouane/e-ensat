	              				
{% extends 'template.html.twig' %}

{% block title %}{{'stock'|trans}}{% endblock %}
{% block stylesheets %}
        {{ parent() }}
        
{% endblock %}
{% block body %}
     
<div class="row">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">{{'stock'|trans}}</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-box-seam"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">  {{'edit_s_categorie'|trans}}</li>
                </ol>
            </nav>
        </div>
         
    </div>

    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-body">
                {% include "flaches.html.twig" %}
                {{ form_start(form, { 'action': path('updateSousCategorie', { 'id': entity.id}), 'attr': { 'class': 'form-horizontal' } }) }}
                    <div class="card shadow-none bg-light border">
                        <div class="card-body" id="path-to-article" data-href="{{ path('article_list_paragraphes') }}">
                            <div class="row g-3">
                      
                                <div class="col-6">
                                    {{ form_row(form.categorie) }}
                                </div>

								<div class="col-6">
                                    {{ form_row(form.code) }}
                                </div>
								<div class="col-6">
                                    {{ form_row(form.designation) }}
                                </div>
								
                                <div class="col-12">
                                    <div class="col-sm-offset-2 col-sm-10">
                                
                                        <button type='submit' class="btn btn btn-success px-4 col-4" style="float:right"> {{'save'|trans}} </button>
                                        <a class="btn btn btn-primary px-4 col-2" style="float:left" href="{{ path('souscategories') }}"> {{'back'|trans}} </a>
                                    
                                    </div>
                                </div>
                                {{ form_row(form._token) }}

                            </div>
                        </div>     
                    </div>
                {{ form_end(form , {'render_rest': false}) }}    
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{parent()}}  
{% endblock %} 


		                				
						    			