	              				
{% extends 'template.html.twig' %}

{% block title %}{{'Ligne'|trans}}{% endblock %}
{% block stylesheets %}
        {{ parent() }}
        
{% endblock %}
{% block body %}
     
<div class="row">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Ligne</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nouvelle Ligne</li>
                </ol>
            </nav>
        </div>
         
    </div>

    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-body">
                {% include "flaches.html.twig" %}
                {{ form_start(form, { 'action': path('addLigne'), 'attr': { 'class': 'form-horizontal' } }) }}
                    <div class="card shadow-none bg-light border">
                        <div class="card-body" id="path-to-article" data-href="{{ path('article_list_paragraphes') }}">
                            <div class="row g-3">
                      
                                <div class="col-6">
                                    {{ form_row(form.articlePE) }}
                                </div>

                                <div class="col-6">
                                    {{ form_row(form.paragraphe) }}
                                </div>
								<div class="col-6">
                                    {{ form_row(form.libelle) }}
                                </div>
								<div class="col-6">
                                    {{ form_row(form.numLigne) }}
                                </div>
								
								<div class="col-6">
                                    {{ form_row(form.type) }}
                                </div>
                                <div class="col-12">
                                    <div>
                                
                                        <button type='submit' class="btn btn btn-success px-4 col-2" style="float:right"> {{'Save'|trans}} </button>
                                        <a class="btn btn btn-primary px-4 col-2" style="float:left" href="{{ path('lignes') }}"> {{'Retour'|trans}} </a>
                                    
                                    </div>
                                </div>
                                {{ form_row(form._token) }}

                            </div>
                        </div>     
                    </div>
                {{ form_end(form , {'render_rest': false}) }}    
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{parent()}}  
	{{ encore_entry_script_tags('programmeEmploi') }}  
{% endblock %} 


     
     
     
     
     
     
     
     
     
     
     
		              