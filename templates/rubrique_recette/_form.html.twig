                        <button class="btn btn btn-success px-4 col-2" style="float:right">{{ button_label|default('save') }}</button>
                        <a class="btn btn btn-primary px-4 col-2" style="float:left" href="{{ path('app_rubrique_recette_index') }}"> {{'back'|trans}} </a>                
