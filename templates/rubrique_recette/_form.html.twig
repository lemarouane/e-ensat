{{ form_start(form) }}
    <div class="card shadow-none bg-light border">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-6">
                    {{ form_row(form.code) }}
                </div>

                <div class="col-6">
                    {{ form_row(form.nature) }}
                </div>

				<div class="col-6">
                    {{ form_row(form.libelle) }}
                </div>
