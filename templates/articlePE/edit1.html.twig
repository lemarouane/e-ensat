
{% extends 'template.html.twig' %}

{% block title %}{{'Articles'|trans}}{% endblock %}

{% block body %}
				<!--breadcrumb-->
				<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
					<div class="breadcrumb-title pe-3">Articles</div>
					<div class="ps-3">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb mb-0 p-0">
								<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
								</li>
								<li class="breadcrumb-item active" aria-current="page">{{'Traitement'|trans}}</li>
							</ol>
						</nav>
					</div>
				
				</div>
				<hr/>
                {% if articles is not empty %}
				<div class="card">
					<div class="card-body">
						<div class="table-responsive">
							<table id="example" class="table table-striped table-bordered" >
								<thead>
									<tr>
										<th>id</th>
                                        <th>libelle</th>
                                        <th>NÂ° Article</th>
									</tr>
								</thead>
								<tbody>
								    {% for article in articles %}
                                        <tr>
                                            <td>{{article.id}}</td>
                                            <td>{{article.libelle}}</td>
                                            <td>{{article.numArticle}}</td>
                                            <td>
                                                <div class="text-center">
                                                    <a href="{{ path('editArticlePE', { 'id': article.id }) }}" class="text-success" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Edit"><i class="fa fa-edit"></i></a>
                                                </div>
                                            </td>			
                                        </tr>
                                    {% endfor %}
								</tbody>
							
							</table>
						</div>
					</div>
				</div>
                {% else %}
                    <div class="alert alert-info">
                        <strong>Pas d'article PE </strong>  
                    </div>
                {% endif %}
            	<a class="btn btn btn-primary px-4" href="{{ path('addAbsence') }}"> {{'Nouvelle Absence'|trans}} + </a>



{% endblock %}

