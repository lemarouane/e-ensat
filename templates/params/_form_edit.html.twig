{{ form_start(form) }}
   
<div class="profile-cover bg-dark"></div>

      <div class="row">
        <div class="col-12 col-lg-8">
          <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="mb-0">{{'User_Edit'|trans}}</h5>
                <hr>
                <div class="card shadow-none border">
                  <div class="card-header">
                    <h6 class="mb-0"></h6>
                  </div>
                  <div class="card-body row g-3">

                         <div class="col-6">
                           {{ form_row(form.logo ,{ 'attr' : { 'class' : 'form-control' }}) }}
                       </div>
                          <div class="col-6">
                           {{ form_row(form.slogan ,{ 'attr' : { 'class' : 'form-control' }}) }}
                       </div>
                        <div class="col-6">
                           {{ form_row(form.nomApp ,{ 'attr' : { 'class' : 'form-control' }}) }}
                       </div>
                      <div class="col-6">
                           {{ form_row(form.version ,{  'attr' : { 'class' : 'form-control' }}) }}
                       </div>
                        <div class="col-6">
                           {{ form_row(form.adresse ,{  'attr' : { 'class' : 'form-control' }}) }}
                       </div>
                      <div class="col-6">
                           {{ form_row(form.telephone ,{  'attr' : { 'class' : 'form-control' }}) }}
                       </div>

                       <div class="col-6">
                           {{ form_row(form.email ,{  'attr' : { 'class' : 'form-control' }}) }}
                       </div>
                 
                  </div>
                </div>
                <div class="text-start">
                  
                  <button type='submit' class="btn btn btn-primary px-4"> {{'Save'|trans}} </button>
                  <a class="btn btn btn-primary px-4" href="{{ path('app_params_index') }}">  {{'Back'|trans}} </a>

                </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-4">
          <div class="card shadow-sm border-0 overflow-hidden">
            <div class="card-body">
               <div class="profile-avatar text-center image-upload" style='.image-upload>input {display: none;}'>
                <label for="params_imageFile">
                  <img id='file' style='cursor: pointer' src="{{asset('uploads/images/') ~ param.imagename}}" class="rounded-circle shadow" width="120" height="120" alt="">
                </label><br>
                {{ form_widget(form.imageFile,{'attr': {'style':'visibility: hidden;','accept':'image/*','onchange': 'document.getElementById("file").src = window.URL.createObjectURL(this.files[0])'}}) }}
                </div>
            </div>
            <div class="card-body">
               <div class="profile-avatar text-center image-upload" style='.image-upload>input {display: none;}'>
                <label for="params_imageFile2">
                  <img id='file2' style='cursor: pointer' src="{{asset('uploads/images/') ~ param.imagename2}}" class="rounded-circle shadow" width="120" height="120" alt="">
                </label><br>
                {{ form_widget(form.imageFile2,{'attr': {'style':'visibility: hidden;','accept':'image/*','onchange': 'document.getElementById("file2").src = window.URL.createObjectURL(this.files[0])'}}) }}
                </div>
            </div>
          </div>
        </div>
         
    </div><!--end row-->
    {{ form_row(form._token) }}
{{ form_end(form , {'render_rest': false}) }}