{% extends "template.html.twig" %}

{% block title %}{{'consommables'|trans}}{% endblock %}

{% block body %}
 <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">{{'consommables'|trans}}</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-box-seam"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> {{'details_affectation_conso'|trans}}  </li>
              </ol>
            </nav>
          </div>
        
        </div>
        <hr/>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              

					<table class="table table-striped table-bordered" >
							
								<tbody>
					
										<tr>
											<td> {{'n_decharge'|trans}}</td> <td>{{decharge.numdecharge}}</td>
										</tr>
										<tr>
											<td> {{'exercice'|trans}}</td> <td>{{decharge.exercice}}</td>
										</tr>
										<tr>
											<td>{{'date_sortie'|trans}}</td> <td>{% if decharge.datedecharge  %} {{decharge.datedecharge|date('Y-m-d')}}  {% else %} {% endif %} </td>
										</tr>
										<tr>
											<td>{{'personnel'|trans}}</td> <td>{{decharge.personnel.nom}} {{decharge.personnel.prenom}}</td>
										</tr>
						            	<tr>
											<td>{{'locale'|trans}}</td> <td>{{decharge.locale}} {{decharge.locale}}</td>
										</tr>
		
								</tbody>
							
							</table>


							{% if decharge.affectations is not empty %}
				<div class="card">
					<div class="card-body">
						<div class="table-responsive">
							<table id="example" class="table table-striped table-bordered" style="text-align:center !important ;" >
								<thead>
									<tr>
										<th style="text-align:center !important ;"> {{'designation'|trans}}</th>
										<th style="text-align:center !important ;"> {{'ref'|trans}}</th>
										<th style="text-align:center !important ;">{{'qte_affecte'|trans}}</th>
									</tr>
								</thead>
								<tbody>
								    {% for affectation in decharge.affectations %}
                                        <tr>
                                            <td>{{affectation.article.designation}}</td>
                                            <td>{{affectation.article.reference}}</td>
											<td>{{affectation.qte}}</td>
                                        </tr>
                                    {% endfor %}
								</tbody>
							
							</table>
						</div>
					</div>
				</div>
                {% else %}
                    <div class="alert alert-success">
                        <strong>{{'no_article'|trans}}  </strong>  
                    </div>
                {% endif %}


            </div>


          </div>
        </div>
		<div>
        	<a class="btn btn btn-primary px-4 " style="float:left" href="{{ path('consommable') }}"> {{'back'|trans}} </a> 
            <a class="btn btn btn-success px-4 col-2" style="float:right"  href="{{ path('etatDechargeC', { 'id': decharge.id}) }}"> {{'imprimer_decharge'|trans}} </a>                    
        </div>
							                    

{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}

              						