{% extends 'template.html.twig' %}

{% block title %}{{'convention_dd'|trans}}{% endblock %}

{% block body %}

				<!--breadcrumb-->
				<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
					<div class="breadcrumb-title pe-3">{{'etudiants_dd'|trans}}</div>
					<div class="ps-3">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb mb-0 p-0">
								<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
								</li>
								<li class="breadcrumb-item active" aria-current="page">{{'convention_dd'|trans}}</li>
							</ol>
						</nav>
					</div>
				
				</div>
				<hr/>
				<div class="card">
					<div class="card-body">
						<div class="table-responsive">
							<table id="example" class="table table-striped table-bordered"  style="text-align:center !important ;" >
                                <thead>
                                    <tr>
                                        <th style="text-align:center !important ;">{{'n'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'etablissement'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'date_debut'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'date_fin'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'contact_ensa'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'contact_etab'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'email'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'tel'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'ville'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'pays'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'filiere'|trans}}</th>
                                        <th style="text-align:center !important ;">{{'op'|trans}}</th>
                                    </tr>
                                </thead>
								<tbody>
								   {% for convention_d_d in convention_d_ds %}
                                        <tr>
                                            <td>{{ convention_d_d.id }}</td>
                                            <td>{{ convention_d_d.etablissement }}</td>
                                            <td>{{ convention_d_d.datedebut ? convention_d_d.datedebut|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ convention_d_d.datefin ? convention_d_d.datefin|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ convention_d_d.contactEnsa }}</td>
                                            <td>{{ convention_d_d.contactEtab }}</td>
                                            <td>{{ convention_d_d.email }}</td>
                                            <td>{{ convention_d_d.phone }}</td>
                                            <td>{{ convention_d_d.ville }}</td>
                                            <td>{{ convention_d_d.pays }}</td>
                                            <td>{{ convention_d_d.filiere ? convention_d_d.filiere|json_encode : '' }}</td>
                                            <td>
                                                <div class="table-actions d-flex align-items-center gap-3 fs-6">
                                                    <a href="{{ path('app_convention_d_d_edit', {'id': convention_d_d.id}) }}" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Edit"><i class="bi bi-pencil-fill"></i></a>
                                                    <a href="{{ path('app_convention_d_d_delete', {'id': convention_d_d.id ,'_token':csrf_token('delete' ~ convention_d_d.id) }) }}" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Delete" onclick=" function delete_msg_trans()
                                                        {
                                                            langue = document.getElementById('langue').value  ;
                                                            
                                                            msg = 'Are yous sure to delete this item ?';
                                                        if(langue=='fr-FR'){
                                                        msg = 'Êtes-vous sûr de vouloir supprimer cet enregistrement ?'
                                                            }
                                                        if(langue=='en-GB'){
                                                        msg = 'Are yous sure to delete this item ?'
                                                                }
                                                        if(langue=='ar-AR'){
                                                        msg = '? هل أنت متأكد أنك تريد حذف هذا السجل '
                                                                    }
                                                        if(langue=='es-ES'){
                                                        msg = '¿Está seguro de que desea eliminar este registro?'
                                                                        }
                                                        return msg ;
                                                        }
                                                        a = delete_msg_trans() ; return confirm(a)"><i class="bi bi-trash-fill"></i>
                                                    </a>
                                                </div>
                        
                                            </td>
                                        </tr>
                                    {% endfor %}
								</tbody>
							
							</table>
						</div>
					</div>
				</div>


 
                <a class="btn btn btn-primary px-4" href="{{ path('app_convention_d_d_new') }}"> {{'add'|trans}} + </a>


{% endblock %}

