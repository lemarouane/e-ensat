                                            <td>{{ convention_d_d.etudiants.code }}</td>
                                            <td>{{ convention_d_d.etudiants.nom}}</td>
                                            <td>{{ convention_d_d.etudiants.prenom }}</td>
                                            <td>{{ convention_d_d.etudiants.email }}</td>
                                            <td>{{ convention_d_d.anneeSoutenance }}</td>
                                            <td>{{ convention_d_d.filiere }}</td>
