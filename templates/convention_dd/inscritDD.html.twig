                                                <div class="table-actions d-flex align-items-center gap-3 fs-6"> 
                                                    <a href="{{ path('app_etudiant_d_d_delete', {'id': convention_d_d.id ,'_token':csrf_token('delete' ~ convention_d_d.id) }) }}" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Delete" onclick=" function delete_msg_trans()
                                                        {
                                                            langue = document.getElementById('langue').value  ;
                                                            
                                                            msg = 'Are yous sure to delete this item ?';
