{% extends "template.html.twig" %}

{% block title %}Article PE !{% endblock %}

{% block body %}
 <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">{{'Article PE'|trans}}</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> Details du paragraphe N° {{rubrique.id}}  </li>
              </ol>
            </nav>
          </div>
        
        </div>
        <hr/>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              

					<table class="table table-striped table-bordered" >
							
								<tbody>
					
										<tr>
											<td>Intitulé Article</td> <td>{{rubrique.articlePE.libelle}}</td>
										</tr>

										<tr>
											<td>Intitulé Paragraphe</td> <td>{{rubrique.paragraphe.libelle}}</td>
										</tr>

										<tr>
											<td>Intitulé ligne</td> <td>{{rubrique.ligne.libelle}}</td>
										</tr>
										<tr>
											<td>N° Rubrique</td> <td>{{rubrique.id}}</td>
										</tr>
					
				                       	<tr>
											<td>Intitulé rubrique</td> <td>{{rubrique.libelle}}</td>
										</tr>

										<tr>
											<td>Code rubrique</td> <td>{{rubrique.numRubrique}}</td>
										</tr>
										<tr>
											<td>Type</td> <td>{{rubrique.type}}</td>
										</tr>

										<tr>
											<td>Affichage</td> <td>{{rubrique.affichage}}</td>
										</tr>

										
		
								</tbody>
							
							</table>

            </div>


          </div>
        </div>
		<div>
            <a class="btn btn btn-primary px-4 col-2" style="float:left" href="{{ path('rubriques') }}"> {{'Retour'|trans}} </a>                           
        </div>
							                    

{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}

              						