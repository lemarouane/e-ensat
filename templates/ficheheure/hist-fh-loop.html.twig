
{% extends 'template.html.twig' %}

{% block title %}{{'fhs'|trans}}{% endblock %}

{% block body %}

        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">{{'fhs'|trans}}</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> {{'fh'|trans}} {{'n'|trans}} {{fh.id}} </li>
              </ol>
            </nav>
          </div>
        
        </div>
        <hr/>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              

<table class="table table-striped table-bordered" >
							
								<tbody> 
					
				  <tr>
					<td>{{'n'|trans}}</td> 
                    <td> {{fh.id}} </td>
				  </tr>

                    <tr>
                    <td>{{'nom_prenom'|trans}}</td>
                    <td>  {{fh.personnel.nom}}  {{fh.personnel.prenom}}</td>
                    </tr>

                    <tr>
                    <td>{{'etablissement'|trans}}</td>
                    <td>{{fh.etablissement}}</td>
                    </tr>


 	               <tr>
				    <td>{{'ville'|trans}}</td> 
                    <td>{{fh.ville}}</td>
			     	</tr>

                  <tr>
                  <td>{{'nb_Heures'|trans}}</td>
                  <td>{{fh.nbHeure}}</td>
                  </tr>


				       	<tr>
				       	<td>{{'m_debut'|trans}}</td>
                    <td>{{fh.moisDebut|date('Y-m-d')}}</td>
			       		</tr>

                  
                    <tr>
                    <td>{{'m_fin'|trans}}</td>
                    <td>{{fh.moisFin|date('Y-m-d')}}</td>
                    </tr>

                    <tr>
                    <td>{{'date_envoie'|trans}}</td>
                    <td>{{fh.dateEnvoie|date('Y-m-d H:i')}}</td>
                    </tr>


             

            

																									
					</tbody>	
				</table>
            </div>
          </div>
        </div>


      
 {% if fh.engagements is not empty %}
        {% for eng in fh.engagements %}

 <div class="card">
    <div class="card-body">
       <div class="table-responsive">
		<table class="table table-striped table-bordered">
          <tbody>	

<th colspan="2"  style="text-align:center;">  {{'engagement'|trans}} {{'n'|trans}} {{loop.index}}    </th>
                 

                     <tr>
                    <td>{{'h_debut'|trans}}</td>
                    <td>
                   {{eng.heureDebut|date('H:i')}}  
                    </td>
                    </tr>

                     <tr>
                    <td>{{'h_fin'|trans}}</td>
                    <td>
                    {{eng.heureFin|date('H:i')}}     
                    </td>
                    </tr>

                    <tr>
                    <td>{{'Jour'|trans}}</td>
                    <td>
                    {{eng.jours}}     
                    </td>
                    </tr>

		  </tbody>	
		</table>
        </div>
    </div>
</div>



        {% endfor %}
{% endif %}



  
{% endblock %}



