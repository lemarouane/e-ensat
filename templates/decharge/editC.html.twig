	              				
{% extends 'template.html.twig' %}

{% block title %}{{'Decharge'|trans}}{% endblock %}
{% block stylesheets %}
        {{ parent() }}
        
{% endblock %}
{% block body %}
     
<div class="row">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Decharge</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Modifier Decharge : {{decharge.numdecharge}}</li>
                </ol>
            </nav>
        </div>
         
    </div>

    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-body">
                {% include "flaches.html.twig" %}
                {{ form_start(form, { 'action': path('updateDechargeC', { 'id': decharge.id}), 'attr': { 'class': 'form-horizontal' } }) }}
                    <div class="card shadow-none bg-light border">
                        <div class="card-body">
                            <div class="row g-3">
                      

                                <div class="col-6">
                                    {{ form_row(form.datedecharge) }}
                                </div>
								<div class="col-6">
                                    {{ form_row(form.personnel) }}
                                </div>
								
								<div class="col-6">
                                    {{ form_row(form.local) }}
                                </div>
                                
                                 <div class="card shadow-none bg-light border">
      <div class="card-body">
            <div class="card-header py-2 bg-transparent"><h6 class="mb-0">{{'lignes'|trans}}</h6></div>
<p style="font-family: 'Times New Roman', Arial, Verdana, Sans-serif; margin-top: 20px;">{{'titles.engs'|trans}}</p>
  <div class="box-body"  id="affectation_list" data-prototype="{{ form_widget(form.affectations.vars.prototype)|e('html_attr')}}" >
 {% for row in form.affectations %}
                      <div class="form-group panel">
                        <div class="row panalEngagement" style="margin-bottom: 15px;">

                            
                               {{ form_row(row.article) }}
                               {{ form_row(row.qte) }}
                          
                        </div>

                      </div>
                      {{ form_end(row , {'render_rest': false}) }}
                    {% endfor %}
        </div>

      </div>
</div>
                                <div class="col-12">
                                    <div>
                                
                                        <button type='submit' class="btn btn btn-success px-4 col-2" style="float:right"> {{'save'|trans}} </button>
                                        <a class="btn btn btn-primary px-4 col-2" style="float:left" href="{{ path('Decharges') }}"> {{'back'|trans}} </a>
                                    
                                    </div>
                                </div>
                                {{ form_row(form._token) }}

                            </div>
                        </div>     
                    </div>
                {{ form_end(form , {'render_rest': false}) }}    
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
      <script src="{{ asset('uploads/js/jquery-3.6.0.min.js') }}"></script>	    	
      <script src="{{ asset('uploads/js/moment-with-locales.min.js')}}"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    // Find all select boxes with IDs matching the pattern
    var selects = document.querySelectorAll('[id^="decharge_c_affectations_"][id$="_article"]');

    // Loop through each select box
    selects.forEach(function (select) {
        // Remove options with no text content
        for (var i = select.options.length - 1; i >= 0; i--) {
            if (!select.options[i].textContent.trim()) {
                select.remove(i);
            }
        }
    });
});
</script>
{{ encore_entry_script_tags('affectation') }}

    {{parent()}}  
     
{% endblock %} 


		                				
						    			