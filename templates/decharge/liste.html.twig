
{% extends 'template.html.twig' %}

{% block title %}{{'decharges'|trans}}{% endblock %}

{% block body %}
				<!--breadcrumb-->
				<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
					<div class="breadcrumb-title pe-3">{{'decharges'|trans}}</div>
					<div class="ps-3">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb mb-0 p-0">
								<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
								</li>
								<li class="breadcrumb-item active" aria-current="page">{{'liste_decharges'|trans}}</li>
							</ol>
						</nav>
					</div>
				
				</div>
				<hr/>
                {% if decharges is not empty %}
				<div class="card">
					<div class="card-body">
						<div class="table-responsive">
							<table id="example" class="table table-striped table-bordered" style="text-align:center !important;" >
								<thead>
									<tr>
										<th style="text-align:center !important;">{{'n'|trans}}</th>
										<th style="text-align:center !important;">{{'personnel'|trans}}</th>
                                        <th style="text-align:center !important;">{{'locale'|trans}}</th>
                                        <th style="text-align:center !important;">{{'date_decharge'|trans}}</th>
                                        <th style="text-align:center !important;">{{'op'|trans}}</th>
									</tr>
								</thead>
								<tbody>
								    {% for decharge in decharges %}
                                        <tr>
                                            <td>{{decharge.numdecharge}}</td>
                                            <td>{{decharge.personnel.nom}} {{decharge.personnel.prenom}}</td>
                                            <td>{{decharge.local}}</td>
                                            <td>{{decharge.datedecharge ? decharge.datedecharge|date('Y-m-d') : '' }}</td>
                                            <td>
                                                <div class="text-center">
                                                    <a href="{{ path('showDecharge', {'id': decharge.id}) }}" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Views"><i class="bi bi-eye-fill"></i></a>&nbsp;&nbsp;
                                            
                                                    <a href="{{ path('editDecharge', {'id': decharge.id}) }}" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Edit"><i class="bi bi-pencil-fill"></i></a>
                                                    
                                                </div>
                                            </td>			
                                        </tr>
                                    {% endfor %}
								</tbody>
							
							</table>
						</div>
					</div>
				</div>
                {% else %}
                    <div class="alert alert-success">
                        <strong> {{'no_decharge'|trans}} </strong>  
                    </div>
                {% endif %}



{% endblock %}

