
{% extends 'template.html.twig' %}

{% block title %}{{'carte_etudiant'|trans}}{% endblock %}

{% block body %}

				<!--breadcrumb-->

                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                        <div class="breadcrumb-title pe-3">{{'scolariteFC'|trans}}</div>
                        <div class="ps-3">
                            <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-recycle"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">{{'reinscription'|trans}}</li>
                            </ol>
                            </nav>
                        </div>
         
                </div>
                <hr>

                <div class="card border-top border-success border-0 border-3">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table id="exe1" class="table table-striped table-bordered dataTable" style="text-align:center !important ;" >
                        <thead>
                          <tr>
                                <th style="text-align:center !important ;">{{'date_envoie'|trans}}</th>
                                <th style="text-align:center !important ;">{{'code_apogee'|trans}}</th>
                                <th style="text-align:center !important ;">{{'nom'|trans}}</th>
                                <th style="text-align:center !important ;">{{'prenom'|trans}}</th>
                                <th style="text-align:center !important ;">{{'enc_etape'|trans}}</th>
                                <th style="text-align:center !important ;">{{'nv_etape'|trans}}</th>
                                <th style="text-align:center !important ;">{{'resultat'|trans}}</th>
                                <th style="text-align:center !important ;">{{'photo'|trans}}</th>
                                <th style="text-align:center !important ;">{{'op'|trans}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reins in reinscription %}
                                <tr>
                                    <td>{{reins.dateDemande ? reins.dateDemande|date('d-m-Y H:i:s') : '' }}</td>
                                    <td>{{reins.idUser.code}}</td>
                                    <td>{{reins.idUser.nom}}</td>
                                    <td>{{reins.idUser.prenom}}</td>
                                    <td>{{reins.etapeAnc}}</td>
                                    <td>{{reins.etapeNouv}}</td>
                                    <td>{{reins.resultat}}</td>
                                    <td>
                                        <div class="text-center">
                                             <img  style="display:block;width:120px;height:120px;" src="../../../e-doc/public/webroot/uploads/img/{{reins.idUser.image.path}}" alt="image"/>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <a data-user="{{reins.id}}" href="#" class="text-success icons" data-bs-toggle="modal" data-bs-target="#dataModalOrdre"  data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Edit"><i class="bi bi-check2-circle" ></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>

							
					</table>
					</div>
                    
					</div>
				</div>
                <div id="dataModalOrdre" class="modal fade">  
      <div class="modal-dialog">  
           <div class="modal-content">  
                <div class="modal-header">  
              
                      <h4 class="modal-title"></h4>  
                </div> 
                <form method="post" id="ordre_form">
                  <div class="modal-body" >
                    <div id="path-to-validation" data-href="{{ path('decisionDocFC', {type: 'reinscription',id:'1111'})}}"> </div>
                   <div class="form-group">
                    <div>
                        <label>{{'n_doc'|trans}}</label>
                        <input id="iddocument" name="searchParam[iddocument]" class="form-control" disabled/>
                    </div>   
 
                   </div>  
                    <div class="form-group">
                      <label>{{'action'|trans}}</label>
                      <select id="ordre"  name="searchParam[decision]" class="form-control">
                        <option value="1">{{'accepter'|trans}}</option>
                        <option value="0">{{'refuser'|trans}}</option>
                      </select>
                    </div>
                    <div class="form-group" id="motifText">
                      <label>{{'motif'|trans}}:</label>
                      <textarea class="form-control" name="searchParam[motifs]" rows="3" placeholder="..."></textarea>
                    </div>   
                   </div>  
                  <div class="modal-footer">
                    <input type="submit" name="ordreName" id="ordreId" value="{{'valider'|trans}}" style="float: left" class="btn btn-success" />  
                    <button  type="button" class="btn btn-danger" data-bs-dismiss="modal">{{'fermer'|trans}}</button> 
                  </div> 
              </form> 
            </div>  
        </div>  
    </div>







  
{% endblock %}
{% block javascripts %}
    {{parent()}}
	
    {{ encore_entry_script_tags('scolarite') }}
        


{% endblock %}

