{% extends "template.html.twig" %}
{% block title %}
Listes Execution PE | {{ parent() }}
{% endblock %}
{% block stylesheets %}
  {{ parent() }}
{% endblock %}
{% block body %}
      <!-- NEW COL START -->
      {% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
         </div>
      {% endfor %}
    <div class="box-footer">
      <section class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="box box-primary">
              <div class="box-header with-border" style="border:1px solid #C4C4C4;">
                <h3 class="box-title"> Listes des demandes:</h3>
                <div class="box-body">
                  <div class="col-md-12">
                    <div class="row">
                      <div class="col-md-12" style="padding-left:30px;padding-right:30px;">
                        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                          <div class="row">
                            <div class="col-sm-6"></div>
                            <div class="col-sm-6"></div>
                          </div>
                          <div class="row">
                            <div class="col-sm-12">
                              {% if ExecutionPE is not empty %}
                              <div class="row table-responsive" style="margin-left:5px; margin-right: 5px;"> 
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                  <thead>
                                    <tr  style="background-color: #f39c12;color: white;">
                                      <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1" aria-sort="ascending" aria-label="reference: activate to sort column descending">Référence PE</th>
                                      <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1" aria-label="dateCRE: activate to sort column ascending"> Date de création</th>
                                      <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1" aria-label="dateMOD: activate to sort column ascending"> Date de Modification</th>
                                      <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1" aria-label="montant: activate to sort column ascending">statut</th>
                                      <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1" aria-label="type: activate to sort column ascending"> Motif si refusé</th>
                                      <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1" aria-label="personne: activate to sort column ascending"> Personne</th>
                                      <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1" aria-label="mat: activate to sort column ascending"> Nb Matériel</th>
                                      <th class="" style="text-align: center">Action</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    {% for epe in ExecutionPE %}
                                      <tr role="row" class="odd">
                                        <td class="sorting_1">{{epe.programme.reference}}</td>
                                        <td>{{epe.dateCRE ? epe.dateCRE|date('d/m/Y') : ''}}</td>
                                        <td>{{epe.dateMOD ? epe.dateMOD|date('d/m/Y') : ''}}</td>
                                        <td>{{epe.statut}}</td>
                                        <td>{{epe.motif}}</td>
                                        <td>{{epe.programme.personne.nom }} {{epe.programme.personne.prenom }}</td>
                                        <td>{{epe.element|length}}</td>
                                        <td>
                                            <div class="text-center">
                                              <a class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top" title="afficher" href="{{ path('showExecutionPE', { 'id': epe.id }) }}"><span class="fa fa-search"></span></a>
                                              </a>  
                                            </div>
                                        </td>
                                      </tr>
                                    {% endfor %}
                                  </tbody>
                                </table>
                              </div>
                            {% else %}
                              <div class="alert alert-success fade in" style="margin-top: 30px;width: 100%">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                <strong>Alert !</strong>  Aucune Execution  
                              </div>
                            {% endif %}

                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- /.col -->
                    </div>
                    <!-- /.row -->
                  </div>
                </div>
              </div>
            </div>
          </div>  
        </div> 
      </section>
    </div>
 
{% endblock body %}

