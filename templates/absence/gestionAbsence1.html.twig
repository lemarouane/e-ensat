
{% extends 'template.html.twig' %}

{% block title %}{{'abs'|trans}}{% endblock %}

{% block body %}
				<!--breadcrumb-->
				<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
					<div class="breadcrumb-title pe-3">{{'abs'|trans}}</div>
					<div class="ps-3">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb mb-0 p-0">
								<li class="breadcrumb-item"><a href="javascript:;"><i class="-bi bi-bookmark-x"></i></a>
								</li>
								<li class="breadcrumb-item active" aria-current="page">{{'trs'|trans}}</li>
							</ol>
						</nav>
					</div>
				
				</div>
				<hr/>
                {% if absences is not empty %}
				<div class="card">
					<div class="card-body">
						<div class="table-responsive">
							<table id="example" class="table table-striped table-bordered"  style="text-align:center !important ;" >
								<thead>
									<tr>
										<th  style="text-align:center !important ;"> {{'num_apogee'|trans}}</th>
                                        <th  style="text-align:center !important ;">{{'nom'|trans}}</th>
                                        <th  style="text-align:center !important ;">{{'prenom'|trans}}</th>
                                        <th  style="text-align:center !important ;">{{'module'|trans}}</th>
                                        <th  style="text-align:center !important ;">{{'nb_abs'|trans}}</th>
                                        <th  style="text-align:center !important ;">{{'details'|trans}}</th>   
									</tr>
								</thead>
								<tbody>
								    {% for absence in absences %}
                                        <tr>
                                            <td>{{absence[0].idUser.code}}</td>
                                            <td>{{absence[0].idUser.nom}}</td>
                                            <td>{{absence[0].idUser.prenom}}</td>
                                            <td>{{absence[0].module}}</td>
                                            <td>{{absence[1]}}</td>
                                            <td>
                                                <div class="text-center">
                                                    <a href="{{ path('showEtudiantAbsence', { 'id': absence[0].idUser.id }) }}" class="text-success" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Edit"><i class="fa fa-edit"></i></a>
                                                </div>
                                            </td>			
                                        </tr>
                                    {% endfor %}
								</tbody>
							
							</table>
						</div>
					</div>
				</div>
                {% else %}
                    <div class="alert alert-success">
                       	<strong>{{'MOD_EMPTY_ETU'|trans}}</strong>   
                    </div>
                {% endif %}
            	<a class="btn btn btn-primary px-4" href="{{ path('addAbsence') }}"> {{'nv_abs'|trans}}  </a>



{% endblock %}

