
{% extends 'template.html.twig' %}

{% block title %}{{'cooperation'|trans}}{% endblock %}

{% block body %}

				<!--breadcrumb-->

                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                        <div class="breadcrumb-title pe-3">{{'cooperation'|trans}}</div>
                        <div class="ps-3">
                            <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-award-fill"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page"> {{'gest_diplomes'|trans}}</li>
                            </ol>
                            </nav>
                        </div>
         
                </div>
                <hr>

                <div class="card border-top border-success border-0 border-3">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table id="example" class="table table-striped table-bordered dataTable" style="text-align:center !important ;" >
                        <thead>
                          <tr>
                                <th style="text-align:center !important ;">{{'date_demande'|trans}}</th>
                                <th style="text-align:center !important ;">{{'num_apogee'|trans}}</th>
                                <th style="text-align:center !important ;">{{'promotion'|trans}}</th>
                                <th style="text-align:center !important ;">{{'nom'|trans}}</th>
                                <th style="text-align:center !important ;">{{'prenom'|trans}}</th>
                                <th style="text-align:center !important ;">{{'valeur'|trans}}</th>
                                <th style="text-align:center !important ;">{{'etat'|trans}}</th>
                                <th style="text-align:center !important ;">{{'filiere'|trans}}</th>
                                <th style="text-align:center !important ;">{{'date_validation'|trans}}</th>
                                <th style="text-align:center !important ;">{{'op'|trans}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for diplome in diplomes %}
                                <tr>
                                    <td>{{diplome.dateDemande ? diplome.dateDemande|date('d-m-Y H:i:s') : '' }}</td>
                                    <td>{{diplome.codeEtudiant.code}}</td>
                                    <td>{{diplome.anneeUniv}}/{{diplome.anneeUniv + 1 }}</td>
                                    <td>{{diplome.codeEtudiant.nom}}</td>
                                    <td>{{diplome.codeEtudiant.prenom}}</td>
                                    <td>{{diplome.valueType}}</td>
                                    
                                     
                                    {% if diplome.decision == -1 %} 
                                       <td  style="color:black;font-weight:bold;">   {{'encours'|trans}}   </td>
                                    {% endif %}

                                     {% if diplome.decision == 2 %} 
                                      <td  style="color:orange;font-weight:bold;">     {{'rendezvous'|trans}}  </td>
                                    {% endif %}

                                    {% if diplome.decision == 0 %} 
                                      <td  style="color:red;font-weight:bold;">      {{'refuse'|trans}} </td>
                                    {% endif %}

                                      {% if diplome.decision == 1 %} 
                                       <td  style="color:green;font-weight:bold;">    {{'accorde'|trans}}  </td>
                                    {% endif %}

                                        {% if diplome.decision is empty %} 
                                      <td> </td>
                                    {% endif %}
                                        
                                        

                                    
					                <td>{{diplome.filiere}}</td>
                                    <td>{{diplome.datevalidation ? diplome.datevalidation|date('d-m-Y H:i:s') : '' }}</td>
                                    <td> <a href="{{ path('suivi_loop', { 'id': diplome.codeEtudiant.id }) }}"><i class="bi bi-search"></i></a> </td>
                                </tr>
                            {% endfor %}
                        </tbody>

							
					</table>
					</div>
                    
					</div>
				</div>
                







  
{% endblock %}
