{% extends 'template.html.twig' %}

{% block title %}{{'entreprises'|trans}}{% endblock %}

{% block body %}

<div class="row">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">{{'nv_entreprise'|trans}}</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">{{'nv_entreprise'|trans}}</li>
                    </ol>
                </nav>
            </div>
         
        </div>
        <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-body">
                {% include "flaches.html.twig" %}
                {{ form_start(form ,{ 'attr' : { 'class' : 'row g-3' }}) }}
                <div class="card shadow-none bg-light border">
                    <div class="card-body">
                            {{ include('entreprise/_form.html.twig') }}
                    </div> 
                </div>
                <div class="card shadow-none align-items-center">
                    <div class="col-4">    
                        <button type='submit' class="btn btn btn-success px-4 col-12"> {{'save'|trans}} </button> 
                    </div>
                </div>
                {{ form_end(form , {'render_rest': false}) }}
                <a class="btn btn btn-primary px-4" href="{{ path('app_entreprise_index') }}">  {{'back'|trans}} </a>
            </div>
        </div>
    </div>
</div>



     


  
{% endblock %}


     
     
     
     
     
     
     
     
     
     
     