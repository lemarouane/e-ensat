
{% extends 'template.html.twig' %}

{% block title %}{{'orientation'|trans}}{% endblock %}

{% block body %}

				<!--breadcrumb-->

                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                        <div class="breadcrumb-title pe-3">{{'orientation'|trans}}</div>
                        <div class="ps-3">
                            <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item"><a href="javascript:;"><i class="bi bi-arrows-move"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">{{'Choix des élèves'|trans}} (Total: {{ Totales }} - Après filtres: {{ nbchoix}} )</li>
                            </ol>
                            </nav>
                        </div>
         
                </div>
                <hr>

                <div class="card border-top border-orange border-0 border-3">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table id="example" class="table table-striped table-bordered" style="text-align:center !important ;" >
                        <thead>
                          <tr>
                            <th  style="text-align:center !important ;">{{'code_apogee'|trans}}</th>
                            <th  style="text-align:center !important ;">{{'nom'|trans}}</th>
                            <th  style="text-align:center !important ;">{{'prenom'|trans}}</th>
                            <th  style="text-align:center !important ;">{{'choix1'|trans}}</th>
                            <th  style="text-align:center !important ;">{{'choix2'|trans}}</th>	
                            <th  style="text-align:center !important ;">{{'choix3'|trans}}</th>
                            <th  style="text-align:center !important ;">{{'choix4'|trans}}</th>
                            <th  style="text-align:center !important ;">{{'choix5'|trans}}</th>
                            <th  style="text-align:center !important ;">{{'choix6'|trans}}</th>
                          </tr>
                        </thead>
                        <tbody>
                          {% for ch in choix %}
                            <tr>
                              <td>{{ch.codeEtudiant}}</td>
                              <td>{{ch.user.nom}}</td>
                              <td>{{ch.user.prenom}}</td>
                              <td>{{ch.choix1}}</td>
                              <td>{{ch.choix2}}</td>
                              <td>{{ch.choix3}}</td>
                              <td>{{ch.choix4}}</td>
                              <td>{{ch.choix5}}</td>
                              <td>{{ch.choix6}}</td>

                            </tr>
                          {% endfor %}
                        </tbody>

							
							</table>
						</div>


					</div>
				</div>






  
{% endblock %}
{% block javascripts %}
{{parent()}}
  
{% endblock %}

